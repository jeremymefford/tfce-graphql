{
  "compilerOptions": {
    "target": "ES2020",                
    "module": "CommonJS",              
    "moduleResolution": "node",
    "outDir": "dist",                  
    "rootDir": ".",                    
    "lib": ["ES2020"],                 
    "esModuleInterop": true,           
    "forceConsistentCasingInFileNames": true,
    "strict": true,                    
    "skipLibCheck": true,
    "types": ["node"]                  
  },
  "include": ["src", "index.ts"],      
  "exclude": ["node_modules", "dist"]
}